{% extends "layout.njk" %} {% block pagina %} // código da página aqui
<h1>Alteração de Música</h1>
<div class="col-md-6">
    <form action="/edit/{{aluno.id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label>Id</label>
            <p class="form-control" id="nome">{{aluno.id}}</p>
        </div>
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" name="nome" id="nome" value="{{aluno.nome}}">
        </div>
        <div class="form-group">
            <label for="sobrenome">Sobre Nome</label>
            <input type="text" class="form-control" name="sobrenome" id="sobrenome" value="{{aluno.sobrenome}}">
        </div>
        <div class="form-group">
            <label for="cpf">Total de estrelas</label>
            <input type="text" class="form-control" name="cpf" id="cpf" value="{{aluno.cpf}}">
        </div>
        <button type="submit" class="btn btn-primary">Alterar Música</ button>
            <a href="#" class="btn btn-default">Voltar</a>
    </form>
</div>
{% endblock %}